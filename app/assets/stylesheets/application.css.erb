 @font-face {
   font-family: 'SignPainter';
   src: url('<%= asset_path('SignPainter.otf') %>')  format('opentype');
 }

 @font-face {
   font-family: 'Herculanum';
   src: url('<%= asset_path('Herculanum.ttf') %>')  format('truetype');
 }

 @font-face {
   font-family: 'BirchStd';
   src: url('<%= asset_path('BirchStd.otf') %>')  format('opentype');
 }

 @font-face {
   font-family: 'Papyrus';
   src: url('<%= asset_path('Papyrus.ttf') %>')  format('truetype');
 }

.header{
  display: inline-block;
  margin-left: 40%;
  height: 100px;
  padding: 10px;
}

.nav {
    top: 2%;
    background-color: black;
    height:350px;
    width:200px;
    float:left;
    left: 10%;
    padding: 15px;
    position: absolute;
    display: inline-block;
    border-radius: 15px;
}

.nav-2{
  top: 2%;
  height:150px;
  width:150px;
  float:left;
  left: 10%;
  padding: 15px;
  position: absolute;
  display: inline-block;
  border-radius: 15px;
}

#house{
  width: 150px;
  position:relative;
  margin-top: 15px;
  margin-left: 25px;
}

#ribbon{
  left: 30%;
  text-align: center;
  position:relative;
}

#wheel-link{
  margin: 30px;
  margin-top: 10px;
}

#bfly-icon{
  position:absolute;
  margin-top: 15px;
  margin-left: 20px;
  transform:rotateZ(20deg);
  width: 100px;
}

body{
  background-color: #cccccc;
  margin:3px;
  padding:3px;
}

h1{
  text-align:center;
  vertical-align: middle;
  font-size: 3em;
  /*color:#4A2273;*/
  color: black;
}

h2{
  text-align: center;
}

p{
  padding: 4px;
  text-align:center;
  font-size: 20px;
}

li{
  left: 100px;
  padding: 10px;
  list-style-type: none;
}

html,body{
  position:relative;
  width:100%;
}
html{
  height:100%;
}
body{
  min-height:100%;
}

#footer{
  text-align: center;
  font-size: 18px;
  color: black;
  position:relative;
  bottom: 10px;
  width: 100%;
  margin: 30px;
  margin-top: 50px;
}

.text-link{
  padding:20px;
}

#why-learn{
  width: 600px;
  height: 500px;
  margin-left: 10%;
  position: relative;
}

#landing-words{
  display:inline-block;
  text-align: center;
  margin-left: 35%;
  margin-right: auto;
  width: 50%;
  height: 550px;
  background-color: darkgray;
  position:relative;
  border-radius: 10px;
  overflow: scroll;
  padding:20px;
}

#tension:hover{
  fill:yellow;
  cursor: pointer;
}

#explosive:hover{
  fill: red;
  cursor: pointer;
}

#honeymoon:hover{
  fill: blue;
  cursor: pointer;
}

.cycle-view{
  position:relative;
  margin:auto;
  margin-top: 0px;
  width:600px;
  height:600px;
  left:10%;
}

#notitle{
  position:absolute;
  margin:auto;
  width:600px;
  height:600px;
  transform:rotateZ(0deg);
}

#notitle:hover{
  cursor: pointer;
}

#wheel-title{
  position:absolute;
  top:215px;
  left:150px;
  z-index: 1;
  font-family: Papyrus;
  font-size: 3em;
  width: 300px;
  text-align:center;
  cursor: pointer;
}

#turn{
  position:absolute;
  left: 70%;
  display:inline-block;
  color: black;
  text-align: center;
  margin-top: 20px;
  width: 200px;
  background-color: white;
  padding: 3px;
  border-radius: 10px;
  font-family: helvetica;
}

#turn:hover {
    cursor: pointer;
}

