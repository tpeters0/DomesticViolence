<%= form_for @butterfly, :html => {:multipart => true} do |f| %>

  <p>
   <%= f.label                :title, "Title" %>
   <%= f.text_field           :title %>
 </p>

  <p>
   <%= f.file_field           :image %>
 </p>

  <p>
    <%= f.label :remote_image_url, "or image URL" %>
    <%= f.text_field :remote_image_url %>
  </p>

  <p>
    <%= f.hidden_field        :user_id %>
  </p>

  <p>
   <%= f.submit %>
 </p>

<% end %>
