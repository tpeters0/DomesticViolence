
<div class="header">
  <div id="wheel-link">
    <%= link_to image_tag('wheel_text_logo.png'), stages_path, :title => "Return to Cycle Wheel" %>
  </div>

  <h1><%= @stage.name %> Stage </h1>

  <div id="ribbon">
    <%= link_to root_path do %>
    <%= image_tag ('ribbon-xsm.png') %>
    <% end %>
  </div>
</div>


<p><%= @stage.description %></p>

<container id="set-of-cards">
<div class="card-grid">
  <% @stage.attitudes.where(role: Role.find_by(name: "Abuser")).each do |attitude| %>
    <div class="card">
      <div class="front">
        <div id= small-stage> <%= @stage.name.capitalize %> Stage </div>
        <div id= big-tude><%= attitude.role.name %> feels ... </div>
      </div>
      <div class="back">
        ... <%= attitude.description %>
      </div>
    </div>
  <% end %>
</div>

<div class="card-grid">
  <% @stage.behaviors.where(role: Role.find_by(name: "Abuser")).each do |behavior| %>
    <div class="card" id="behavior">
      <div class="front">
        <div id= small-stage> <%= @stage.name.capitalize %> Stage </div>
        <div id= big-tude><%= behavior.role.name %> ... </div>
      </div>
      <div class="back">
        ... <%= behavior.description %>
      </div>
    </div>
  <% end %>
</div>


<div class="card-grid">
  <% @stage.attitudes.where(role: Role.find_by(name: "Victim")).each do |attitude| %>
    <div class="card">
      <div class="front">
        <div id= small-stage> <%= @stage.name.capitalize %> Stage </div>
        <div id= big-tude><%= attitude.role.name %> feels ... </div>
      </div>
      <div class="back">
        ... <%= attitude.description %>
      </div>
    </div>
  <% end %>
</div>


<div class="card-grid">
  <% @stage.behaviors.where(role: Role.find_by(name: "Victim")).each do |behavior| %>
    <div class="card" id="behavior">
      <div class="front">
        <div id= small-stage> <%= @stage.name.capitalize %> Stage </div>
        <div id= big-tude><%= behavior.role.name %> ... </div>
      </div>
      <div class="back">
        ... <%= behavior.description %>
      </div>
    </div>
  <% end %>
</div>

</container>
