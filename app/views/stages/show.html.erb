<container class="nav-2">
  <div id="return-to-wheel-link">
    <%= link_to image_tag('wheel_text_logo.png'), stages_path, :title => "Return to Cycle" %>
  </div>
</container>

  <h1><%= @stage.name %> Stage </h1>

<div id= descript-stage>
  <p id=descript-stage><%= @stage.description %></p>
</div>

<container id="set-of-cards">
<div class="card-grid">
  <% @stage.attitudes.where(role: Role.find_by(name: "Abuser")).each do |attitude| %>
    <div class="card">
      <div class="front">
        <div id= small-stage> <%= @stage.name.capitalize %> Stage </div>
        <div id= big-attitude><%= attitude.role.name %> feels ... </div>
      </div>
      <div class="back">
        ... <%= attitude.description %>
      </div>
    </div>
  <% end %>
</div>

<div class="card-grid">
  <% @stage.behaviors.where(role: Role.find_by(name: "Abuser")).each do |behavior| %>
    <div class="card" id="behavior">
      <div class="front">
        <div id= small-stage> <%= @stage.name.capitalize %> Stage </div>
        <div id= big-attitude><%= behavior.role.name %> ... </div>
      </div>
      <div class="back">
        ... <%= behavior.description %>
      </div>
    </div>
  <% end %>
</div>


